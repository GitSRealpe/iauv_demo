<launch>
    <!-- depth image to pointcloud nodes -->
    <node pkg="nodelet" type="nodelet" name="nodelet_manager" args="manager"/>
    <node pkg="nodelet" type="nodelet" name="nodelet1"
        args="load depth_image_proc/point_cloud_xyz nodelet_manager">
        <remap from="camera_info" to="/girona1000/depth_cam/camera_info"/>
        <remap from="image_rect" to="/girona1000/depth_cam/image_depth"/>
        <remap from="points" to="/girona1000/depth_cam/pointcloud"/>
    </node>

    <!-- filtering pointcloud to octomap nodes -->
    <node pkg="nodelet" type="nodelet" name="voxel_grid" args="load pcl/VoxelGrid nodelet_manager" output="screen">
        <remap from="~input" to="/girona1000/depth_cam/pointcloud"/>
        <rosparam>
                filter_field_name: z
                filter_limit_min: 0.01
                filter_limit_max: 10
                filter_limit_negative: False
                leaf_size: 0.02
            </rosparam>
    </node>

    <param name="~frame_id" type="string" value="world_ned"/>
    <param name="~base_frame_id" type="string" value="girona1000/origin"/>
    <param name="~resolution" value="0.1"/>
    <param name="~sensor_model/max_range" value="10.0"/>
    <param name="~latch" value="false"/>
    <!-- <param name="~filter_ground" value="true"/>
    <param name="~ground_filter/angle" value="0.3"/> -->

    <node pkg="octomap_server" type="octomap_server_node" name="octomap">
        <remap from="/cloud_in" to="/voxel_grid/output"/>
        <!-- <param name="frame_id" type="string" value="world_ned"/>
        <param name="base_frame_id" type="string" value="girona1000/base_link"/> -->
    </node>

</launch>